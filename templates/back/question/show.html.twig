{% extends 'base.html.twig' %}

{% block title %}Question
{% endblock %}

{% block body %}
	{% include 'back/partial/back_nav_bar.html.twig' %}
	<div class="container pt-5">
		<div class="row mb-2">
			<div class="col-8 mx-auto">


				<h1>Question</h1>
				<a href="{{ path('app_back_question_index') }}">back to list</a>
                
				<table class="table">
					<tbody>
						<tr>
							<th>Id</th>
							<td>{{ question.id }}</td>
						</tr>
						<tr>
							<th>Content</th>
							<td>{{ question.content }}</td>
						</tr>
						<tr>
							<th>CreatedAt</th>
							<td>{{ question.createdAt ? question.createdAt|date('Y-m-d') : '' }}</td>
						</tr>
						<tr>
							<th>UpdatedAt</th>
							<td>{{ question.updatedAt ? question.updatedAt|date('Y-m-d') : '' }}</td>
						</tr>
					</tbody>
				</table>


				<div class="col d-flex justify-content-center">
					<a href="{{ path('app_back_question_edit', {'id': question.id}) }}">edit</a>

					{{ include('back/question/_delete_form.html.twig') }}
				</div>
			</div>
		</div>
	</div>
{% endblock %}
