{% extends 'base.html.twig' %}

{% block title %}QuestionAnswer index{% endblock %}

{% block body %}
{% include 'back/partial/back_nav_bar.html.twig' %}
    <h1>QuestionAnswer index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>IsGood</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for question_answer in question_answers %}
            <tr>
                <td>{{ question_answer.id }}</td>
                <td>{{ question_answer.isGood ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_back_question_answer_show', {'id': question_answer.id}) }}">show</a>
                    <a href="{{ path('app_back_question_answer_edit', {'id': question_answer.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_back_question_answer_new') }}">Create new</a>
{% endblock %}
