{% extends 'base.html.twig' %}

{% block title %}Game index{% endblock %}

{% block body %}
{% include 'back/partial/back_nav_bar.html.twig' %}
    <h1>Game index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>CreatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for game in games %}
            <tr>
                <td>{{ game.id }}</td>
                <td>{{ game.name }}</td>
                <td>{{ game.createdAt ? game.createdAt|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_back_game_show', {'id': game.id}) }}">show</a>
                    <a href="{{ path('app_back_game_edit', {'id': game.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_back_game_new') }}">Create new</a>
{% endblock %}
